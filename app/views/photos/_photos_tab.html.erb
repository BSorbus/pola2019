<div id="tab_photos">
  <fieldset class="my-fieldset">
    <legend class="my-fieldset colored-title"><%= subtitle %>&nbsp;&nbsp;-&nbsp;&nbsp;<%= photo_index_legend %></legend>

    <div class="row">

      <div class="col-sm-12">
        <table id="photoable-photos" class="hover cell-border compact" width="100%" 
          data-source="<%= datatables_index_photos_path(photoable_type: photoable.class.to_s, photoable_id: photoable.id.to_s, format: :json) %>">
          <thead>
            <tr>
              <th>0 ID </th>
              <th><%= Photo.human_attribute_name(:miniature) %></th>
              <th><%= Photo.human_attribute_name(:photo_created_at) %></th>
              <th><%= Photo.human_attribute_name(:latitude) %></th>
              <th><%= Photo.human_attribute_name(:longitude) %></th>
              <th><%= Photo.human_attribute_name(:attached_file) %></th>
              <th><%= Photo.human_attribute_name(:note) %></th>
              <th><%= Photo.human_attribute_name(:user_id) %></th>
              <th><%= Photo.human_attribute_name(:updated_at) %></th>
              <th><%= Photo.human_attribute_name(:file_size) %></th>
              <th></th>
            </tr>
          </thead>
          <tbody>                    
            <!--data from JSON -->
          </tbody>
        </table>
      </div> <!--/col-sm-12 -->


      <div class="col-sm-12">
        <hr class="hr-with-minimum-margins">
        <%= form_for [photoable, Photo.new] do |f| %>
          <div class="row">
            <div class="form-group col-sm-12">
              <%= f.label :attached_file, class: 'control-label' %><small>&nbsp;&nbsp;(<%= t('help_block_text.fileuploaddragdrop') %>)</small><br>
              <%= f.file_field :attached_file, multiple: true, name: "photo[attached_file]", class: 'form-control input input-file-field' %>
            </div>
          </div>
        <% end %>
      </div> <!-- /col-sm-12 -->

      <div class="col-sm-12">
        <script id="photo-template-upload" type="text/x-tmpl">

          <div class="upload" id="{%=o.name%}_id_file">
            <div>{%=o.name%}</div> 
            <div class="progress">
              <div class="progress-bar progress-bar-success" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: 0%;"></div>
            </div>
          </div>

        </script>
      </div> <!-- /col-sm-12 -->


    </div>

  </fieldset>
</div>

