<br>
<div class="container-fluid"> 
  <div class="row">
    <div class="col-sm-2">
      <ul  class="nav nav-pills brand-pills nav-stacked">
        <li class="brand-nav active">
          <a href="#role_show" data-toggle="tab"><%= role_show_legend %></a>
        </li>
        <% if @role.is_special? && policy(:user).index? %>
          <li class="brand-nav brand-nav-level-1">
            <a href="#users" data-toggle="tab"><%= fa_icon("user", text: t("pages.user.index.title")) %></a>
          </li>
        <% end %>
      </ul>
    </div>
    <div class="col-sm-10">
      <div class="tab-content clearfix">

        <div class="tab-pane active" id="role_show">
          <%= render 'data', input_disabled: true, subtitle: role_info_legend(@role) %>
        </div>

        <div class="tab-pane" id="users">
          <%= render 'users', subtitle: role_info_legend(@role) %>
        </div>

      </div>
    </div>

  </div>

</div>

