<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <h3 class="center colored-title index-title"><%= role_index_legend %></h3>
    </div> <!--/col-sm-12 -->
  </div> <!--/row -->
</div> <!--/container -->


<div class="container-fluid">
  <div class="row">
    <div class="col-sm-12">
      <table id="roles-table" class="hover cell-border" cellspacing="0" width="100%" 
        data-source="<%= datatables_index_roles_path(format: :json) %>">
        <thead>
          <tr>
            <th>id</th>
            <th class='col-sm-3'><%= Role.human_attribute_name(:name) %></th>
            <th class='col-sm-1'><%= Role.human_attribute_name(:special) %></th>
            <th class='col-sm-4'><%= Role.human_attribute_name(:note) %></th>
            <th class='col-sm-4'><%= Role.human_attribute_name(:activities) %></th>
          </tr>
        </thead>
        <tbody>
          <!-- data from ajax -->
        </tbody>
      </table>
    </div> <!--/col-sm-12 -->
  </div> <!--/row -->
  <br>
  <div class="row">
    <div class="col-sm-12">
      <% if policy(:role).new? %>
        <%= link_to new_role_path, class: "btn btn-primary pull-right" do %>
          <span class="fa fa-plus"></span>
          <%= t("helpers.links.new") %>
        <% end %>
      <% end %>
    </div> <!--/col-sm-12 -->
  </div> <!--/row -->

</div> <!--/container -->
