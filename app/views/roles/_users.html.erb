<div id="tab_users">
  <fieldset class="my-fieldset">
    <legend class="my-fieldset colored-title"><%= subtitle %>&nbsp;&nbsp;-&nbsp;&nbsp;<%= fa_icon("user", text: t("pages.user.index.title")) %></legend>

    <div class="row">
      <div class="col-sm-12">
        <table id="role-users-table" class="hover cell-border compact" width="100%" 
          data-source="<%= datatables_index_role_users_path(role_id: @role.id, format: :json) %>">
          <thead>
            <tr>
              <th                  >ID</th>
              <th class="col-sm-4"><%= User.human_attribute_name(:name) %></th>
              <th class="col-sm-6"><%= User.human_attribute_name(:note) %></th>
              <th class="col-sm-1" >Uprawnienie</th>
              <th class="col-sm-1" >Akcje</th>
            </tr>
          </thead>
          <tbody>
             <!--data from JSON -->
          </tbody>
        </table>
      </div> <!--/col-sm-12 -->
    </div> <!--/row -->

  </fieldset>
</div>