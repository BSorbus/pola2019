<div class="row">
  <div class="col-sm-6">
    <div class="row">
      <div class="form-group col-sm-4">
        <p><strong><%= BusinessTrip.human_attribute_name(:number) %></strong></p>
        <%= @business_trip.number %>
      </div>
      <div class="form-group col-sm-8">
        <p><strong><%= BusinessTrip.human_attribute_name(:employee_id) %></strong></p>
        <%= @business_trip.employee.name %>
      </div>
      <div class="form-group col-sm-6">
        <p><strong><%= BusinessTrip.human_attribute_name(:destination) %></strong></p>
        <%= @business_trip.destination %>
      </div>
      <div class="form-group col-sm-3">
        <p><strong><%= BusinessTrip.human_attribute_name(:start_date) %></strong></p>
        <%= @business_trip.start_date %>
      </div>
      <div class="form-group col-sm-3">
        <p><strong><%= BusinessTrip.human_attribute_name(:end_date) %></strong></p>
        <%= @business_trip.end_date %>
      </div>

      <div class="form-group col-sm-9">
        <fieldset class="my-fieldset">
          <legend class="my-fieldset"><%= t('pages.business_trip.fieldset.transports_title') %></legend>

          <div class="row">
            <div class="form-group col-sm-12">

              <% @business_trip.transports.each do |transport| %>
                <p><%= transport.transport_type.name %></p>
              <% end %>

            </div>
          </div> <!--/row -->
        </fieldset>
      </div>


    </div>  <!-- /row -->
  </div>  <!-- /col-sm-6 -->

  <div class="col-sm-6">
    <div class="row">
      <div class="form-group col-sm-12">
        <p><strong><%= BusinessTrip.human_attribute_name(:purpose) %></strong></p>
        <%= text_with_break_line(@business_trip.purpose) %>
      </div>
      <div class="form-group col-sm-12">
        <p><strong><%= BusinessTrip.human_attribute_name(:trip_confirmation) %></strong></p>
        <%= text_with_break_line(@business_trip.trip_confirmation) %>
      </div>
      <div class="form-group col-sm-12">
        <p><strong><%= BusinessTrip.human_attribute_name(:note) %></strong></p>
        <%= @business_trip.note.html_safe %>
      </div>
    </div>  <!-- /row -->
  </div> <!--/col-sm-6 -->
</div>  <!-- /row -->
