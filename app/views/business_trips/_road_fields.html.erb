<div class="fields">
  <div class='row' >
    <div class="form-group required col-sm-2">
      <%= f.text_field :from, autofocus: true, class: 'form-control input-sm' %>
    </div>
    <div class="form-group required col-sm-2">
      <%= f.text_field :start_date_time, class: 'form-control input-sm datetimepicker' %>
    </div>
    <div class="form-group required col-sm-2">
      <%= f.text_field :to, autofocus: true, class: 'form-control input-sm' %>
    </div>
    <div class="form-group required col-sm-2">
      <%= f.text_field :end_date_time, class: 'form-control input-sm datetimepicker' %>
    </div>
    <div class="form-group required col-sm-2">
      <%= f.select :transport_type_id, 
            TransportType.all.order(:name).collect {|v| [ "#{v[:name]}", v[:id] ] },
            { include_blank: true }, 
            { autofocus: false, class: 'form-control input-sm', disabled: false } %>
    </div>
    <div class="form-group required col-sm-1">
      <%= f.number_field :cost, class: 'form-control input-sm', min: 0.00, step: 0.01, data: {autonumeric: {vMin: 0.00}} %>
    </div>

    <div class="form-group col-sm-1">
      <%= f.hidden_field :_destroy %>
      <%= link_to t("helpers.links.link_to_remove_fields_nested"), '#',
        onClick: "removeNestedFields(this); return false;", class: 'remove-link-button btn btn-sm btn-danger' %>
    </div>
  </div>
</div>

<script>
  $(document).ready(function() {

    $('.datetimepicker').datetimepicker({
      format: 'YYYY-MM-DD HH:mm'
    });

  });
</script>