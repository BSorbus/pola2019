<div id="tab_accessorizations">
  <fieldset class="my-fieldset">
    <legend class="my-fieldset colored-title"><%= subtitle %>&nbsp;&nbsp;-&nbsp;&nbsp;<%= event_index_legend %></legend>

    <div class="row">
      <div class="col-sm-12">
        <table id="accessorizations-table" class="hover cell-border compact" width="100%" 
          data-source="<%= datatables_index_errand_accessorizations_path(errand_id: @errand.id, format: :json) %>">
          <thead>
            <tr>
              <th>ID</th>
              <th><%= Event.human_attribute_name(:title) %></th>
              <th><%= Event.human_attribute_name(:event_type_id) %></th>
              <th><%= Event.human_attribute_name(:end_date) %></th>
              <th><%= Event.human_attribute_name(:event_status_id) %></th>
              <th><%= Event.human_attribute_name(:project_id) %></th>
              <th><%= Project.human_attribute_name(:customer_id) %></th>
              <th><%= Project.human_attribute_name(:project_status_id) %></th>
              <th><%= Event.human_attribute_name(:event_effect_id) %></th>
              <th><%= Event.human_attribute_name(:attachments_count) %></th>
              <th><%= Event.human_attribute_name(:flat_assigned_users) %></th>
            </tr>
          </thead>
          <tbody>
             <!--data from JSON -->
          </tbody>
        </table>
      </div> <!--/col-sm-12 -->
    </div>

    <br>

    <div class="row">
      <div class="col-sm-12">
        <% if policy(:event).new? %>
          <%= link_to new_event_path(errand_id: @errand.id, back_url: errand_path(@errand)), class: "btn btn-primary pull-right" do %>
            <span class="fa fa-plus"></span>
            <%= t("helpers.links.new") %>
          <% end %>
        <% end %>
      </div> <!--/col-sm-12 -->
    </div>

    <div class="col-sm-12">
      <hr>
    </div> <!--/col-sm-12 -->

    <div class="col-sm-12">
      <div class="row" id="chart_div">
        <%#= chart_events_by_status_for_errand(@errand.id, @errand.number) %>
      </div> <!--/row -->
    </div> <!--/col-sm-12 -->
    
  </fieldset>
</div>