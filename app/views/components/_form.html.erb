<div class="row">
  <div class="col-sm-12">
    <%= form_with(model: component, local: true) do |f| %>

      <% input_disabled ||= false  
         #if input_disabled is not passed to the partial it doesn't crash. 
         # We default it to false 
      %>

      <%= form_errors_for component %>

      <div class="row">
  	    <div class="form-group col-sm-6">

  	      <div class="row">
            <% if component.is_folder? %>

              <div class="form-group required col-sm-12">
                <%= f.label :name_if_folder, class: 'control-label' %>
                <%= f.text_field :name_if_folder, autofocus: true, class: 'form-control input-sm' %>
              </div>

            <% else %>

    	        <div class="form-group col-sm-12">
    	          <p><strong><%= Component.human_attribute_name(:component_file_identifier) %></strong></p>
    	          <%= component.component_file_identifier %>
         	    </div> 
    	        <div class="form-group col-sm-12">
    	          <p><strong><%= Component.human_attribute_name(:file_size) %></strong></p>
    	          <%= component.file_size %>
         	    </div> 

            <% end %>

            <div class="form-group col-sm-12">
              <%= f.label :note, class: 'control-label' %>
              <%= f.text_area :note, :rows => 5, class: 'form-control input-sm' %>
            </div> 

      		</div>  <!-- /row -->

  	    </div> <!-- /form-group col-sm-6 -->

      </div>  <!-- /row -->


      <hr class="hr-without-top-margin">


      <% if input_disabled %>
        <!-- for "Show" -->
      <% else %>
        <!-- form "New"/"Edit" -->
        <div class="row">
          <div class="col-sm-12">

            <%= link_to :back, class: "btn btn-default" do %>
              <span class="glyphicon glyphicon-arrow-left"></span>
              <%= t("helpers.links.back") %>
            <% end %>
            <%= f.submit nil, :class => 'btn btn-primary' %>

          </div> <!--/col-sm-12 -->
        </div> <!-- /row -->
      <% end %>
      
    <% end %>

  </div> <!--/col-sm-12-->
</div>
