<div id="tab_opinions">
  <fieldset class="my-fieldset">
    <legend class="my-fieldset colored-title"><%= subtitle %>&nbsp;&nbsp;-&nbsp;&nbsp;<%= opinion_index_legend %></legend>

    <div class="row">

      <div class="col-sm-12">
        <table id="opinionable-opinions" width="100%" class="hover cell-border compact" width="100%" 
          data-source="<%= datatables_index_opinions_path(opinionable_type: opinionable.class.to_s, opinionable_id: opinionable.id.to_s, format: :json) %>">
          <thead>
            <tr>
              <th>0 ID </th>
              <th><%= Opinion.human_attribute_name(:attached_file) %></th>
              <th><%= Opinion.human_attribute_name(:note) %></th>
              <th><%= Opinion.human_attribute_name(:user_id) %></th>
              <th><%= Opinion.human_attribute_name(:updated_at) %></th>
              <th><%= Opinion.human_attribute_name(:file_size) %></th>
              <th></th>
            </tr>
          </thead>
          <tbody>                    
            <!--data from JSON -->
          </tbody>
        </table>
      </div> <!--/col-sm-12 -->


      <div class="col-sm-3">
        <hr>
        <%= form_for [opinionable, Opinion.new] do |f| %>

          <div class="row">
            <div class="form-group col-sm-12">
              <%= f.label :attached_file, class: 'control-label' %><small>&nbsp;&nbsp;(<%= t('help_block_text.fileuploaddragdrop') %>)</small><br>
              <%= f.file_field :attached_file, multiple: true, name: "opinion[attached_file]", class: 'form-control input input-file-field' %>
            </div>

          </div>

        <% end %>

      </div> <!-- /col-sm-3 -->
      <div class="col-sm-9">
        <hr>
        <div class="row">
          <div class="col-sm-12 center">
            <div id="opinion_file_preview_area"></div>
          </div>

        </div>
      </div> <!-- /col-sm-3 -->


      <div class="col-sm-12">
        <script id="opinion-template-upload" type="text/x-tmpl">

          <div class="upload" id="{%=o.name%}_id_file">
            <div>{%=o.name%}</div> 
            <div class="progress">
              <div class="progress-bar progress-bar-success" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: 0%;"></div>
            </div>
          </div>

        </script>
      </div> <!-- /col-sm-12 -->


    </div>

  </fieldset>
</div>

