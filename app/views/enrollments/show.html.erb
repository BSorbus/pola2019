<br>
<div class="container-fluid"> 
  <div class="row">
    <div class="col-sm-2">
      <ul  class="nav nav-pills brand-pills nav-stacked">
        <li class="brand-nav active">
          <a href="#enrollment_show" data-toggle="tab"><%= enrollment_show_legend %></a>
        </li>
        <% if policy(:attachment).enrollment_index? %>
          <li class="brand-nav brand-nav-level-1">
            <a href="#attachments" data-toggle="tab"><%= attachment_index_legend %></a>
          </li>
        <% end %>
        <% if policy(:correspondence).enrollment_index? %>
          <li class="brand-nav brand-nav-level-1">
            <a href="#correspondences" data-toggle="tab"><%= correspondence_index_legend %></a>
          </li>
        <% end %>
        <% if policy(:enrollment).work? %>
          <li class="brand-nav brand-nav-level-1">
            <a href="#works" data-toggle="tab"><%= work_index_legend %></a>
          </li>
        <% end %>
      </ul>
    </div>
    <div class="col-sm-10">
      <div class="tab-content clearfix">

        <div class="tab-pane active" id="enrollment_show">
          <%= render 'data', input_disabled: true, subtitle: enrollment_info_legend(@enrollment) %>
        </div>

        <div class="tab-pane" id="attachments">
          <%= render 'attachments/attachments_tab', attachmenable: @enrollment, subtitle: enrollment_info_legend(@enrollment) %>
        </div>

        <div class="tab-pane" id="correspondences">
          <%= render 'correspondences/correspondences_tab', correspondenable: @enrollment, subtitle: enrollment_info_legend(@enrollment) %>
        </div>

        <div class="tab-pane" id="works">
          <%= render 'works/works_tab', trackable_type: "Enrollment", trackable_id: @enrollment.id, subtitle: enrollment_info_legend(@enrollment) %>
        </div>

      </div>
    </div>

  </div>

</div>


<div id="myModal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content"></div>
  </div>
</div>
