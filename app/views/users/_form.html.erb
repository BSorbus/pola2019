<div class="row">
  <div class="col-sm-12">
    <%= form_with(model: user, local: true) do |f| %>

      <% input_disabled ||= false  
         #if input_disabled is not passed to the partial it doesn't crash. 
         # We default it to false 
      %>

      <%= form_errors_for user %>

      <div class="row">
        <div class="col-sm-6">
          <div class="row">

            <div class="form-group col-sm-6">
              <%= f.label :name, class: 'control-label' %>
              <%= f.text_field :name, autofocus: true, class: 'form-control input-sm', disabled: true %>
            </div>

            <div class="form-group col-sm-6">
              <%= f.label :email, class: 'control-label' %>
              <%= f.text_field :email, class: 'form-control input-sm', disabled: true %>
            </div>

            <div class="form-group col-sm-6">
              <%= f.label :legitimation, class: 'control-label' %>
              <%= f.text_field :legitimation, class: 'form-control input-sm', disabled: input_disabled %>
            </div>

            <div class="form-group col-sm-6">
              <%= f.label :position, class: 'control-label' %>
              <%= f.text_field :position, class: 'form-control input-sm', disabled: input_disabled %>
            </div>

            <div class="form-group col-sm-6">
              <%= f.label :notification_by_email, class: 'control-label' %><br>
              <%= f.check_box :notification_by_email, disabled: input_disabled %>
            </div>

          </div>  <!-- /row -->
        </div>  <!-- /col-sm-6 -->

        <div class="col-sm-6">
          <div class="row">
            <div class="form-group col-sm-12">
              <%= f.label :note, class: 'control-label' %>
              <%= f.trix_editor :note %>
            </div>
          </div> <!-- /row -->
        </div> <!--/col-sm-6 -->

      </div>  <!-- /row -->


      <hr class="hr-without-top-margin">

      <% if input_disabled %>
        <!-- for "Show" -->
      <% else %>
        <!-- form "New"/"Edit" -->
        <div class="row">
          <div class="col-sm-12">
            <% if policy(:user).index? %>
              <%= link_to users_path, class: "btn btn-default" do %>
                <span class="fa fa-list"></span>
                <%= t("helpers.links.index") %>
              <% end %>

              <%= link_to :back, class: "btn btn-default" do %>
                <span class="glyphicon glyphicon-arrow-left"></span>
                <%= t("helpers.links.back") %>
              <% end %>
            <% end %>

            <%= f.submit nil, class: 'btn btn-success' %>

          </div> <!--/col-sm-12 -->
        </div> <!-- /row -->
      <% end %>
      
    <% end %>

  </div> <!--/col-sm-11-->
</div>